/*
根据200 岛屿数量   基础上实现的



*/
class Solution {
public:
    int max_area ;


    int dfs(vector<vector<int>>& grid, int r, int c)
    {

        if (r < 0 || c < 0 || r >= grid.size() || c >= grid[0].size() || grid[r][c] == 0) return 0;

        grid[r][c] = 0;

        int area = 1;
        area += dfs(grid,r,c+1);
        area += dfs(grid, r, c - 1);
        area += dfs(grid, r+1, c);
        area += dfs(grid, r - 1, c);

        max_area = max(area, max_area);
        return area;
    }

    int maxAreaOfIsland(vector<vector<int>>& grid) {
        if (grid.empty()) return 0 ;

        int r = grid.size();
        int c = grid[0].size();
        max_area = 0;
        for (int i = 0; i < r; i++)
        {
            for (int j = 0; j < c; j++)
            {
                if (grid[i][j] == 1)
                {
                    dfs(grid, i,j);
                }
            }
        }
        return max_area;
    }
};

